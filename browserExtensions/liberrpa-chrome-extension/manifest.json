{
  "manifest_version": 3,
  "name": "LiberRPA Chrome Extension",
  "description": "The Chrome extension to interact with LiberRPA Local Server.",
  "author": "mailwork.hu@gmail.com",
  "version": "0.1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "cookies",
    "downloads",
    "nativeMessaging"
  ],
  "host_permissions": ["*://*/*"],
  "icons": {
    "16": "assets/LiberRPA_icon_v1_color_16px.png",
    "32": "assets/LiberRPA_icon_v1_color_32px.png",
    "48": "assets/LiberRPA_icon_v1_color_48px.png",
    "128": "assets/LiberRPA_icon_v1_color_128px.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/LiberRPA_icon_v1_color_16px.png",
      "24": "assets/LiberRPA_icon_v1_color_24px.png",
      "32": "assets/LiberRPA_icon_v1_color_32px.png"
    },
    "default_title": "LiberRPA Chrome Extension"
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js", "node_modules/chrome-inject-eval/dist/umd.min.js"]
    }
  ]
}
